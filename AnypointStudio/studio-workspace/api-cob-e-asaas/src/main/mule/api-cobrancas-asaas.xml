</flow>
    <flow name="post:\v3\payments:application\json:api-e-cobrancas-asaas-config">
		<flow-ref doc:name="Flow Reference" doc:id="7383c720-db71-4eaf-8cf7-22f36af0818a" name="create-cob-e-apiSub_Flow"/>
    </flow>
</mule>
